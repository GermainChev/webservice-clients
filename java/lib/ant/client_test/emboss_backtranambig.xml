<project name="EBIWS2-Java-Test-EMBOSS-backtranambig">
	<!-- Apache Axis 1.x -->
	<target name="axis1-test-emboss_backtranambig" description="Axis 1.x: EMBOSS backtranambig (SOAP) test">
		<property name="client.jar.axis1" value="${jar.dir}/EmbossBacktranambig_Axis1.jar" />
		<antcall target="test-emboss_backtranambig-help">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-params">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-paramdetail">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-sequence-file">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-sequence-dbid">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-sequence-stdin">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-idlist-file">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-idlist-stdin">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-multifasta-file">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-multifasta-stdin">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
	</target>
	
	<!-- JAX-WS RI -->
	<target name="jaxws-test-emboss_backtranambig" description="JAX-WS RI: EMBOSS backtranambig (SOAP) test">
		<property name="client.jar.jaxws" value="${jar.dir}/EmbossBacktranambig_JAXWS.jar" />
		<antcall target="test-emboss_backtranambig-help">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-params">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-paramdetail">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-sequence-file">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-sequence-dbid">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-sequence-stdin">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-idlist-file">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-idlist-stdin">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-multifasta-file">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-emboss_backtranambig-multifasta-stdin">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
	</target>

	<target name="test-emboss_backtranambig-help">
		<echo message="EMBOSS backtranambig (SOAP): usage/help message" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--help" />
		</java>
	</target>
	
	<target name="test-emboss_backtranambig-params">
		<echo message="EMBOSS backtranambig (SOAP): parameter names" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--params" />
		</java>
	</target>
	
	<target name="test-emboss_backtranambig-paramdetail">
		<echo message="EMBOSS backtranambig (SOAP): parameter details" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--paramDetail" />
			<arg value="codontable" />
		</java>
	</target>
	
	<target name="test-emboss_backtranambig-sequence-file">
		<echo message="EMBOSS backtranambig (SOAP): File input" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--email" />
			<arg value="${test.email}" />
			<arg value="test_data/SWISSPROT_ABCC9_HUMAN.fasta" />
		</java>
	</target>
	
	<target name="test-emboss_backtranambig-sequence-dbid">
		<echo message="EMBOSS backtranambig (SOAP): DB:ID input" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--email" />
			<arg value="${test.email}" />
			<arg value="UNIPROT:ABCC9_HUMAN" />
		</java>
	</target>
	
	<target name="test-emboss_backtranambig-sequence-stdin">
		<echo message="EMBOSS backtranambig (SOAP): Input sequence from STDIN and result to STDOUT" />
		<java fork="true" failonerror="true" jar="${client.jar}" input="test_data/SWISSPROT_ABCC9_HUMAN.fasta">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--email" />
			<arg value="${test.email}" />
			<arg value="--outformat" />
			<arg value="out" /> <!-- Output -->
			<arg value="--outfile" />
			<arg value="-" /> <!-- Result output to STDOUT -->
			<arg value="-" /> <!-- Input sequence from STDIN -->
		</java>
	</target>
	
	<target name="test-emboss_backtranambig-idlist-file">
		<echo message="EMBOSS backtranambig (SOAP): ID list input file" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--email" />
			<arg value="${test.email}" />
			<arg value="--outformat" />
			<arg value="out" /> <!-- Output -->
			<arg value="--outfile" />
			<arg value="-" /> <!-- Result output to STDOUT -->
			<arg value="@test_data/uniprot_id_list.txt" />
		</java>
	</target>
	
	<target name="test-emboss_backtranambig-idlist-stdin">
		<echo message="EMBOSS backtranambig (SOAP): ID list input from STDIN and result to STDOUT" />
		<java fork="true" failonerror="true" jar="${client.jar}" input="test_data/uniprot_id_list.txt">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--email" />
			<arg value="${test.email}" />
			<arg value="--outformat" />
			<arg value="out" /> <!-- Output -->
			<arg value="--outfile" />
			<arg value="-" /> <!-- Result output to STDOUT -->
			<arg value="@-" /> <!-- Input ID list from STDIN -->
		</java>
	</target>
	
	<target name="test-emboss_backtranambig-multifasta-file">
		<echo message="EMBOSS backtranambig (SOAP): multifasta input file" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--email" />
			<arg value="${test.email}" />
			<arg value="--outformat" />
			<arg value="out" /> <!-- Output -->
			<arg value="--outfile" />
			<arg value="-" /> <!-- Result output to STDOUT -->
			<arg value="--multifasta" /> <!-- Multiple fasta sequence input -->
			<arg value="test_data/multi_prot.tfa" />
		</java>
	</target>
	
	<target name="test-emboss_backtranambig-multifasta-stdin">
		<echo message="EMBOSS backtranambig (SOAP): multifasta input from STDIN and result to STDOUT" />
		<java fork="true" failonerror="true" jar="${client.jar}" input="test_data/multi_prot.tfa">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--email" />
			<arg value="${test.email}" />
			<arg value="--outformat" />
			<arg value="out" /> <!-- Output -->
			<arg value="--outfile" />
			<arg value="-" /> <!-- Result output to STDOUT -->
			<arg value="--multifasta" /> <!-- Multiple fasta sequence input -->
			<arg value="-" /> <!-- Multiple fasta sequence from STDIN -->
		</java>
	</target>
	
	<!-- Clean-up -->
	<target name="test-clean-emboss_backtranambig" description="EMBOSS backtranambig (SOAP) test clean">
		<delete>
			<fileset dir="." includes="emboss_backtranambig-**"/>
		</delete>
	</target>
	
</project>

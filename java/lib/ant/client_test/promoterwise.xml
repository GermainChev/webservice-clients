<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id$ -->
<project name="EBIWS2-Java-Test-PromoterWise">
	<!-- Apache Axis 1.x -->
	<target name="axis1-test-promoterwise" description="Axis 1.x: PromoterWise (SOAP) test">
		<property name="client.jar.axis1" value="${jar.dir}/PromoterWise_Axis1.jar" />
		<antcall target="test-promoterwise-help">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-promoterwise-params">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-promoterwise-paramdetail">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-promoterwise-sequence-file">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
		<antcall target="test-promoterwise-sequence-dbid">
			<param name="client.jar" value="${client.jar.axis1}" />
		</antcall>
	</target>
	
	<!-- JAX-WS RI -->
	<target name="jaxws-test-promoterwise" description="JAX-WS RI: PromoterWise (SOAP) test">
		<property name="client.jar.jaxws" value="${jar.dir}/PromoterWise_JAXWS.jar" />
		<antcall target="test-promoterwise-help">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-promoterwise-params">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-promoterwise-paramdetail">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-promoterwise-sequence-file">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
		<antcall target="test-promoterwise-sequence-dbid">
			<param name="client.jar" value="${client.jar.jaxws}" />
		</antcall>
	</target>

	<target name="test-promoterwise-help">
		<echo message="PromoterWise (SOAP): usage/help message" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--help" />
		</java>
	</target>
	
	<target name="test-promoterwise-params">
		<echo message="PromoterWise (SOAP): parameter names" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--params" />
		</java>
	</target>
	
	<target name="test-promoterwise-paramdetail">
		<echo message="PromoterWise (SOAP): parameter details" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--paramDetail" />
			<arg value="hitoutput" />
		</java>
	</target>
	
	<target name="test-promoterwise-sequence-file">
		<echo message="PromoterWise (SOAP): File input" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--email" />
			<arg value="${test.email}" />
			<arg value="--asequence" />
			<arg value="test_data/EMBL_AB000204.fasta" />
			<arg value="--bsequence" />
			<arg value="test_data/EMBL_HQ708921.fasta" />
		</java>
	</target>
	
	<target name="test-promoterwise-sequence-dbid">
		<echo message="PromoterWise (SOAP): DB:ID input" />
		<java fork="true" failonerror="true" jar="${client.jar}">
			<jvmarg value="${jvm.extra.jars}" />
			<arg value="--email" />
			<arg value="${test.email}" />
			<arg value="--asequence" />
			<arg value="EMBL:AB000204" />
			<arg value="--bsequence" />
			<arg value="EMBL:HQ708921" />
		</java>
	</target>
		
	<!-- Clean-up -->
	<target name="test-clean-promoterwise" description="PromoterWise (SOAP) test clean">
		<delete>
			<fileset dir="." includes="promoterwise-**"/>
		</delete>
	</target>
	
</project>

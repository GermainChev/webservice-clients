### Clean-up ###

clean:

distclean: clean
	del /Q /f $(DEBUGBINDIR)\*.* $(RELEASEBINDIR)\*.*
	rmdir $(DEBUGBINDIR)
	rmdir $(RELEASEBINDIR)
	rmdir $(BINDIR)

clean-stubs:
	cd $(STUBSRCDIR)
	del /Q /f /s *.cs
	del /Q /f /s *.map
